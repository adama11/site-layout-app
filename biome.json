{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "useButtonType": "off"
      },
      "style": {
        "noUselessElse": "off"
      }
    }
  },
  "files": {
    "ignore": [
      ".next/*",
      "node_modules/*",
      "src/components/ui",
      "./tailwind.config.ts"
    ]
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "lineWidth": 120,
      "quoteStyle": "single",
      "indentStyle": "space",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  }
}
